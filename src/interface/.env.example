# Backend API
NEXT_PUBLIC_API_URL=https://api.shlawg.com

# NextAuth.js
NEXTAUTH_URL=https://pyreflect.shlawg.com
NEXTAUTH_SECRET=<run: openssl rand -base64 32>

# GitHub OAuth App
GITHUB_CLIENT_ID=<from-github-oauth-app>
